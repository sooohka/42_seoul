{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "gnl",
            "command": "cd",
            "args": [
                "${fileDirname}",
                "&&",
                "gcc",
                "-g3",
                // "-D BUFFER_SIZE=32",
                "-Wextra",
                "-Wall",
                "-Werror",
                "*.c",
                "&&",
                "./a.out"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "presentation": {
                "clear": true
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "C파일 하나",
            "command": "clang",
            "args": ["-Wextra", "-Wall", "-Werror", "${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}"],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "presentation": {
                "clear": true
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "C파일 전부",
            "command": "clang",
            "args": ["-Wextra", "-Wall", "-Werror", "${fileDirname}/*.c", "-o", "${fileDirname}/a.out"],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "presentation": {
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "norminette",
            "command": "norminette",
            "args": ["${file}"]
        }
    ]
}
