{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C파일 하나",
			"command": "clang",
			"args": [
				"-Wextra",
				"-Wall",
				"-Werror",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"presentation": {
				"clear": true
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "C파일 전부",
			"command": "clang",
			"args": [
				"-Wextra",
				"-Wall",
				"-Werror",
				"${fileDirname}/*.c",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"presentation": {
				"clear": true
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "C bulid for clang(debug)",
			"command": "clang",
			"args": [
				"-g3",
				"-Wextra",
				"-Wall",
				"-Werror",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"presentation": {
				"clear": true
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "C bulid all for clang(debug)",
			"command": "clang",
			"args": [
				"-g3",
				"-Wextra",
				"-Wall",
				"-Werror",
				"${fileDirname}/*.c",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"presentation": {
				"clear": true
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "norminette",
			"command": "norminette",
			"args": [
				"${fileDirname}/${fileBasenameNoExtension}.c",
			],
			"problemMatcher": []
		},
		{
			"label": "norminette ALL",
			"command": "norminette",
			"args": [
				"${fileDirname}/"
			],
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"presentation": {
				"clear": true
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "execute",
			"command": "${fileDirname}/${fileBasenameNoExtension}",
			"group": "test",
			"presentation": {
				"clear": true
			},
			"args": [
				"cat",
				"-e",
				";",
				"rm",
				"${fileDirname}/${fileBasenameNoExtension}"
			]
		}
	]
}