{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C bulid for gcc",
            "command": "gcc",
            "args": [
                "-Wextra",
                "-Wall",
                "-Werror",
                "${fileDirname}/*.c",
                "-o",
                "${fileDirname}/a.out",
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "presentation": {
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "C bulid for gcc(debug)",
            "command": "gcc",
            "args": [
                "-g3",
                "-Wextra",
                "-Wall",
                "-Werror",
                "${fileDirname}/*.c",
                "${fileDirname}/*.h",
                "-o",
                "${fileDirname}/a.out",
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "presentation": {
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        //execute 
        {
            "type": "shell",
            "label": "execute",
            "command": "${fileDirname}/a.out",
            "group": "test",
            "presentation": {
                "clear": true
            },
            "args": [
                "|",
                "cat",
                "-e",
                "&&",
                "rm",
                "${fileDirname}/a.out"
            ]
        },
        {
            "type": "shell",
            "label": "execute with arg",
            "command": "${fileDirname}/a.out",
            "group": "test",
            "presentation": {
                "clear": true,
            },
            "args": [
                "Aa",
                "",
                "",
                "Ba",
                "a",
                "bBA",
                "aB",
                "",
                "aBB",
                "",
                "bb",
                "",
                "BA",
                "AaA",
                "a",
                "a",
                "ABA",
                "Ab",
                "B",
                "bAa",
                "AB",
                "a",
                "aB",
                "a",
                "b",
                "",
                "Ba",
                "Ba",
                "Ab",
                "|",
                "cat",
                "-e",
                "&&",
                "rm",
                "${fileDirname}/${fileBasenameNoExtension}"
            ]
        }
    ]
}
